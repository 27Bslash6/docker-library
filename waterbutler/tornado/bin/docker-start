#!/bin/bash

# specifically pass the system ENV variable through to the user,
# otherwise it would get dropped.
sudo -E -u docker bash -c "
    export ENV=$ENV &&
    git pull
    git reset --hard 04df0857b34fa3f9b14491067c169b7c17132408
    source /env/bin/activate
    pip install --upgrade -r requirements.txt
    invoke server
"
